// layout of old reddit post in feed

{
  "type": "linear_layout",
  "direction": "vertical",
  "children": [
    {
      "type": "linear_layout",
      "direction": "horizontal",
      "children": [
        {
          "type": "img_view",
          "id": "thumbnail_img",
          "url": "placeholder",
          "width": 0.2
        },
        {
          "type": "linear_layout",
          "width": 0.8,
          "direction": "vertical",
          "children": [
            {
              "type": "text_view",
              "id": "title",
              "text": "Placehoder Title",
              "style": "material_title"
            },
            {
              "type": "linear_layout",
              "direction": "horizontal",
              "children": [
                {
                  "type": "img_view",
                  "id": "display_img",
                  "url": "placeholder",
                  "width": 0.2
                },
                {
                  "type": "linear_layout",
                  "direction": "vertical",
                  "children": [
                    {
                      "type": "linear_layout",
                      "direction": "horizontal",
                      "children": [
                        {
                          "type": "text_view",
                          "id": "submitted_time"
                        },
                        {
                          "type": "text_view",
                          "id": "usr_name"
                        },
                        {
                          "type": "text_view",
                          "id": "sub_reddit_name"
                        }
                      ]
                    },
                    {
                      "type": "linear_layout",
                      "direction": "horizontal",
                      "children": [
                        {
                          "type": "text_view",
                          "id": "comment_cont"
                        },
                        {
                          "type": "button",
                          "id": "btn_share",
                          "text": "share",
                          "style": "text_only"
                        },
                        {
                          "type": "button",
                          "id": "btn_report",
                          "text": "report",
                          "style": "text_only"
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}